{
  "manifest_version": 3,
  "name": "SwitchColor",
  "version": "1.0",
  "description": "一个用于切换网页背景颜色的Chrome浏览器插件",
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "tabs",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SwitchColor - 切换背景颜色",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}