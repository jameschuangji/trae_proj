.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.clock {
  width: 300rpx;
  height: 300rpx;
  margin: 40rpx 0;
  border-radius: 50%;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  width: 100%;
  padding: 0 30rpx;
}

.grid-item {
  height: 200rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.zone-picker {
  color: #ffffff;
  font-size: 28rpx;
  text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.2);
}

.time-text {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
  text-align: right;
}

.save-btn {
  margin-top: 40rpx;
  width: 60%;
  background: linear-gradient(135deg, #2c3e50, #3498db);
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
}